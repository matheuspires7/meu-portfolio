<div class="d-flex justify-content-end gap-2 mt-3">
  <!-- Botão Editar -->
  <a href="/projects/<%= projeto.id %>/edit" class="btn btn-sm btn-warning">
    <i class="bi bi-pencil"></i> Editar
  </a>

  <!-- Formulário para deletar -->
  <form action="/projects/<%= projeto.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Deseja realmente excluir este projeto?');">
    <button type="submit" class="btn btn-sm btn-danger">
      <i class="bi bi-trash"></i> Excluir
    </button>
  </form>
</div>
